{% extends "::base.html.twig" %}

{% block body %}

<div class="container">
    <div class="row">


        {% include  '::modules.html.twig' %}
        <div class="span9">

            <ul class="thumbnails">
                {% for product in products %}
                <li class="span3">
                    <div class="thumbnail">
                        <img src="#" alt="Skate" width="300" height="300">
                        <div class="caption">
                            <h4>{{ produit.nom }}</h4>
                            <p>{{ produit.prix }}</p>
                            <a class="btn btn-primary" href="{{ path('eshop_produit') }}">Plus d'infos</a>
                            <a class="btn btn-success" href="{{ path('eshop_panier') }}">Ajouter au panier</a>
                        </div>
                    </div>
                </li>
                    {% endfor %}
            </ul>


        </div>
    </div>
</div>

{% endblock %}