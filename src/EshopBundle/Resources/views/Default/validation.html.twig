{% extends "::base.html.twig" %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="span9">
                <h2>Valider mon panier</h2>
                <form>
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prix</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in panier %}
                            <tr>
                                <td>{{ produit.nom }}</td>
                                <td>{{ produit.prix }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </form>

                <dl class="dl-horizontal pull-right">
                    <dt>Total:</dt>
                    <dd></dd>
                </dl>
                <div class="clearfix"></div>
                <a href="#" class="btn btn-success pull-right">Payer</a>
            </div>

        </div>
    </div>

{% endblock %}