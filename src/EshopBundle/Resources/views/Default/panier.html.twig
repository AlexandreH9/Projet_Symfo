{% extends "::base.html.twig" %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="span9">
                <h2>Votre parnier</h2>
                <form>
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prix</th>

                        </tr>
                        </thead>

                        {% for product in panier %}
                            <tr>
                                <td>{{ produit.nom }}</td>
                                <td>{{ produit.prix }}</td>
                            </tr>
                        {% endfor %}

                    </table>
                </form>

                <dl class="dl-horizontal pull-right">

                    <dt>Total:</dt>
                    <dd></dd>
                </dl>
                <div class="clearfix"></div>
                <a href="{{ path('eshop_livraison') }}" class="btn btn-success pull-right">Valider mon panier</a>
                <a href="{{ path('eshop_homepage') }}" class="btn btn-primary">Continuer mes achats</a>
            </div>

        </div>
    </div>

{% endblock %}